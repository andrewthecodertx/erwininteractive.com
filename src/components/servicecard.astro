---
const { title, description, icon } = Astro.props;
---

<div class="bg-white p-8 rounded-lg shadow-md transform transition hover:-translate-y-2">
  <div class="text-argentinian_blue mb-4">
    <i class:list={["fas", icon, "text-4xl"]}></i>
  </div>
  <h3 class="text-2xl font-bold mb-4 text-gray-800">{title}</h3>
  <p class="text-gray-600">{description}</p>
</div>
