---
const { title, description, icon } = Astro.props;
---

<div class="bg-gray-200 p-8 rounded-lg shadow-lg transform transition hover:-translate-y-2">
  <div class="text-rich_black mb-4">
    <i class:list={["fas", icon, "text-4xl"]}></i>
  </div>
  <h3 class="text-2xl font-bold mb-4 text-rich_black">{title}</h3>
  <p class="text-gray-800">{description}</p>
</div>
